---
interface Props {
  title: string;
  image: string;
  description: string;
}

const { title, image, description } = Astro.props;
---
<div class="group relative overflow-hidden rounded-lg cursor-pointer">
  <img 
    src={image} 
    alt={title}
    class="w-full h-[400px] object-cover transition-transform duration-300 group-hover:scale-110"
  />
  <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent">
    <div class="absolute bottom-0 p-6 text-white">
      <h3 class="text-2xl font-bold mb-2">{title}</h3>
      <p class="text-sm opacity-0 group-hover:opacity-100 transition-opacity duration-300">
        {description}
      </p>
    </div>
  </div>
</div>
